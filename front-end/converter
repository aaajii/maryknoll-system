def updateSectionProfile(request, pk='pk',template = 'registrar/section-profiles/section-registration-list-update.html'):
    instance = get_object_or_404(Section, pk=pk)
    return render(request, template, {'instance': instance})
    
def form_updateSectionProfile(request, pk='pk', template = 'enrollmemt/forms-section-create'):
    instance = get_object_or_404(Section, pk=pk)
    data = {'form_is_valid' : False }
    last_section = getLatest(Section,'section_ID')

    form = updateInstance(request, SectionForms, instance)

    if form.is_valid():
        data['form_is_valid'] = True
    else:
        data['form_is_valid'] = False

    context = {'form': form, 'section':last_section, 'instance': instance}
    return ajaxTable(request,template,context,data)